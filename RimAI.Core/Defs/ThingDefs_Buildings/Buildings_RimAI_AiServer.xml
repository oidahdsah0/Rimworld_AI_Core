<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>RimAI_AIServer_Lv1A</defName>
    <label>AI 服务器（Lv1）</label>
    <description>为殖民地提供基础 AI 服务的服务器。</description>
    <category>Building</category>
    <thingClass>Building</thingClass>
    <rotatable>true</rotatable>
    <size>(2,2)</size>
    <altitudeLayer>Building</altitudeLayer>
    <selectable>true</selectable>
    <designationCategory>RimAI</designationCategory>
    <researchPrerequisites>
      <li>RimAI_AI_Level1</li>
    </researchPrerequisites>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <statBases>
      <MaxHitPoints>450</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Flammability>0.8</Flammability>
      <Mass>45</Mass>
      <Beauty>0</Beauty>
    </statBases>
    <costList>
      <Steel>240</Steel>
      <ComponentIndustrial>6</ComponentIndustrial>
      <Silver>200</Silver>
      <Gold>10</Gold>
    </costList>
    <graphicData>
      <graphicClass>Graphic_Multi</graphicClass>
      <texPath>Things/Building/RimAI/ai_server_lv1</texPath>
      <drawSize>(2,2)</drawSize>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>600</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable">
        <compClass>CompFlickable</compClass>
      </li>
      <li Class="CompProperties_Breakdownable">
        <compClass>CompBreakdownable</compClass>
      </li>
      <li Class="RimAI.Core.Source.Modules.World.Comps.CompProperties_AiServerBuffs">
        <baseGlobalWorkSpeedPercent>15</baseGlobalWorkSpeedPercent>
        <randomAttributeCount>0</randomAttributeCount>
        <randomAttributePercent>0</randomAttributePercent>
      </li>
      <li Class="RimAI.Core.Source.UI.Gizmos.CompProperties_AIServerInfoSendGizmo" />
    </comps>
    <placeWorkers>
      <li>RimAI.Core.Source.Modules.World.PlaceWorkers.PlaceWorker_AIServerLimit_Lv1</li>
    </placeWorkers>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.7</fillPercent>
  </ThingDef>
