{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Core Solution",
            "type": "shell",
            "command": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe",
            "args": [
                "${workspaceFolder}/Rimworld_AI_Core.sln",
                "/property:Configuration=Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Build the Rimworld_AI_Core solution using MSBuild."
        },
        {
            "label": "Rebuild Core Solution",
            "type": "shell",
            "command": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe",
            "args": [
                "${workspaceFolder}/Rimworld_AI_Core.sln",
                "/t:Rebuild",
                "/property:Configuration=Debug"
            ],
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Clean and rebuild the Rimworld_AI_Core solution using MSBuild."
        }
    ]
}
